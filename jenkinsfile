pipeline {
    agent { docker { image 'python:latest'}}

    stages {
        stage('1-Build') {
            steps {
                echo 'Start to stages build'
                echo 'Building.............'
                echo 'End of Stage Build'
            }
        }
        stage('2-Test') {
            steps {
                echo 'Start to stages Test'
                echo 'Testing.............'
                echo 'End of Stage Build'
            }
        }
        stage('3-Deploy') {
            steps {
                echo 'Start to stages deploy'
                echo 'Deploing.............'
                echo 'End of Stage Build'
                sh 'python --version'
            }
        }
    }
}

